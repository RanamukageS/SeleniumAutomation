<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MyTestSuite" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="utils.TestListner"/>
    </listeners>

    <!-- All test classes -->
    <test name="AllTests">
        <groups>
            <run>
                <!-- This will dynamically pick up the group passed from Maven -->
                <include name="${groups}"/>
            </run>
        </groups>
        <classes>
            <class name="tests.AdminPageTests"/>
            <class name="tests.PIMTests"/>
            <class name="tests.TimeTests"/>
        </classes>
    </test>
</suite>
